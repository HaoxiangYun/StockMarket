<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity2_1"
    tools:showIn="@layout/activity_main_activity2_1">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="544dp"
        android:layout_height="529dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp">

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="42dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:text="Back"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/InterestCalculator_Text"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="INTEREST CALCULATOR" />

    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="439dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="3dp">


        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="10dp">

            <TextView
                android:id="@+id/Principal_Text"
                android:layout_width="147dp"
                android:layout_height="92dp"
                android:text="Principal"
                android:visibility="visible" />

            <EditText
                android:id="@+id/Principal_input"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:hint="Principal"
                android:imeOptions="actionNext"
                android:inputType="number|numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="10dp">

            <TextView
                android:id="@+id/Rate_Text"
                android:layout_width="147dp"
                android:layout_height="59dp"
                android:text="Rate(%)"
                android:visibility="visible" />

            <EditText
                android:id="@+id/Rate_input"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:hint="Rate"
                android:imeOptions="actionNext"
                android:inputType="number|numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="85dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="10dp">

            <TextView
                android:id="@+id/Time_Text"
                android:layout_width="149dp"
                android:layout_height="64dp"
                android:text="Time (Years)"
                android:visibility="visible" />

            <EditText
                android:id="@+id/Time_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:hint="Time"
                android:imeOptions="actionNext"
                android:inputType="number|numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="10dp">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Simple/Compound    "
                tools:layout_editor_absoluteX="107dp"
                tools:layout_editor_absoluteY="281dp" />

            <Button
                android:id="@+id/compute_button"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:text="COMPUTE"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="103dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="10dp">

            <TextView
                android:id="@+id/Amount_Text"
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:text="Amount"
                android:visibility="visible" />

            <TextView
                android:id="@+id/Amount_output"
                android:layout_width="141dp"
                android:layout_height="35dp"
                android:text="Amount"
                android:visibility="visible" />


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>